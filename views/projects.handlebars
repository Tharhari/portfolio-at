<div id="main">
    <div>
        <h1>My Projects</h1>
            <div>
            {{#if isAdmin}}
                <div>
                    <a href="project/new" class="btn btn-link"> New project</a>
                </div>
            {{/if}}
            {{#if databaseError}}
                <div>
                    An error has occurred with the database: <br/>
                    {{theError}}
                </div>
            {{else}}
            <ul class="project_container">
                {{#each projects}}
                    <li class="project_item"><a href="/projects/{{projectID}}"> {{projectName}}</a>
                    {{#if ../isAdmin}}
                    <a href="projects/update/{{projectID}}"> Modify </a> - <a href="projects/delete/{{projectID}}" class="important"> Delete</a>
                    {{/if}}
                    </li>
                {{/each}}
            {{/if}}
            </ul>
        </div>
    </div>
</div>
